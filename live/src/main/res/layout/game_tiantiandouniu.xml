<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_game_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_game_quamin_bg"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rl_poker_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_red_left_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_puke_bg">

                <ImageView
                    android:id="@+id/iv_left_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/xm_ttdn_pm" />

                <ImageView
                    android:id="@+id/iv_left_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/xm_ttdn_pm" />

                <ImageView
                    android:id="@+id/iv_left_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:background="@mipmap/xm_ttdn_pm" />

                <ImageView
                    android:id="@+id/iv_left_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:background="@mipmap/xm_ttdn_pm" />

                <ImageView
                    android:id="@+id/iv_left_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:background="@mipmap/xm_ttdn_pm" />

                <ImageView
                    android:id="@+id/tv_left_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_left_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:background="@mipmap/xm_cow_3"
                    android:visibility="invisible" />


            </RelativeLayout>


            <TextView
                android:id="@+id/tv_time_calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@mipmap/xm_clock"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold"
                android:visibility="invisible" />


            <RelativeLayout
                android:id="@+id/rl_blue_right_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shap_puke_bg">

                <ImageView
                    android:id="@+id/iv_right_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/xm_ttdn_pm" />

                <ImageView
                    android:id="@+id/iv_right_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/xm_ttdn_pm" />

                <ImageView
                    android:id="@+id/iv_right_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:background="@mipmap/xm_ttdn_pm" />

                <ImageView
                    android:id="@+id/iv_right_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:background="@mipmap/xm_ttdn_pm" />

                <ImageView
                    android:id="@+id/iv_right_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:background="@mipmap/xm_ttdn_pm" />


                <ImageView
                    android:id="@+id/tv_right_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_right_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:background="@mipmap/xm_cow_3"
                    android:visibility="invisible" />

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_xiazhuu_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_red_left_xiazhu_area"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/shap_puke_bg"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_left_xiazhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/xm_cow_red" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:id="@+id/tv_left_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:text="0"
                        android:textColor="#957039"
                        android:textSize="@dimen/text_size_10"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_left_multiple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/iv_left_xiazhu"
                        android:layout_alignParentRight="true"
                        android:paddingRight="5dp"
                        android:text="2.2倍"
                        android:textColor="#957039"
                        android:textSize="@dimen/text_size_10"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_left_money_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1000"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#40000000"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_left_betNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="0"
                        android:textColor="@color/home_yellow"
                        android:textStyle="bold"

                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_middle_xiazhu_area"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_below="@+id/rl_middle_pk"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/shap_puke_bg"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="-15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#957039"
                    android:text="平局"/>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_middle_xiazhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/xm_cow_red"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_middle_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="#957039"
                        android:textSize="@dimen/text_size_10"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_middle_multiple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/iv_middle_xiazhu"
                        android:layout_centerHorizontal="true"
                        android:text="6倍"
                        android:textColor="#957039"
                        android:textSize="@dimen/text_size_10"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_middle_money_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1000"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </RelativeLayout>
                </FrameLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#40000000"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_middle_betNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="0"
                        android:textColor="@color/home_yellow"
                        android:textStyle="bold"

                        />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_blue_right_xiazhu_area"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/shap_puke_bg"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_right_xiazhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/xm_cow_blue" />

                    <TextView
                        android:id="@+id/tv_right_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:text="0"
                        android:textColor="#957039"
                        android:textSize="@dimen/text_size_10"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_right_multiple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/iv_right_xiazhu"
                        android:paddingLeft="5dp"
                        android:text="2.2倍"
                        android:textColor="#957039"
                        android:textSize="@dimen/text_size_10"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_right_money_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1000"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#40000000"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_right_betNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="0"
                        android:textColor="@color/home_yellow"
                        android:textStyle="bold"

                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_game_area"
        android:background="@color/transparent"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll_user_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/rank_yx" />

            <TextView
                android:id="@+id/tv_user_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="1"
                android:text="0"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="1"
                android:text="充值"
                android:textColor="@color/home_yellow" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_game_area"
        android:layout_toLeftOf="@+id/tv_num_hundred"
        android:background="@mipmap/xm_jb_bg"
        android:gravity="center"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="10"
        android:textColor="@color/home_yellow"
        android:textSize="11dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_num_ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_game_area"
        android:layout_toLeftOf="@+id/tv_num_hundred"
        android:background="@mipmap/xm_jb_bg"
        android:gravity="center"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="10"
        android:textColor="@color/home_yellow"
        android:textSize="11dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_game_area"
        android:layout_toLeftOf="@+id/tv_num_thousand"
        android:background="@mipmap/xm_jb_bg"
        android:gravity="center"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="100"
        android:textColor="@color/home_yellow"
        android:textSize="9dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_num_hundred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_game_area"
        android:layout_toLeftOf="@+id/tv_num_thousand"
        android:background="@mipmap/xm_jb_noclick"
        android:gravity="center"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="100"
        android:textColor="@color/home_text"
        android:textSize="9dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_game_area"
        android:layout_toLeftOf="@+id/tv_num_wan"
        android:background="@mipmap/xm_jb_bg"
        android:gravity="center"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="1仟"
        android:textColor="@color/home_yellow"
        android:textSize="9dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_num_thousand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_game_area"
        android:layout_toLeftOf="@+id/tv_num_wan"
        android:background="@mipmap/xm_jb_noclick"
        android:gravity="center"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="1仟"
        android:textColor="@color/home_text"
        android:textSize="9dp"
        android:textStyle="bold" />

    <TextView


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_game_area"
        android:layout_toLeftOf="@+id/iv_time"
        android:background="@mipmap/xm_jb_bg"
        android:gravity="center"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="1万"
        android:textColor="@color/home_yellow"
        android:textSize="9dp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/tv_num_wan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_game_area"
        android:layout_toLeftOf="@+id/iv_time"
        android:background="@mipmap/xm_jb_noclick"
        android:gravity="center"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="1万"
        android:textColor="@color/home_text"
        android:textSize="9dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll_game_area"
        android:background="@mipmap/xm_time" />
    <!--发牌原牌-->

    <ImageView
        android:id="@+id/iv_game_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/xm_ttdn_allpk"
        android:visibility="invisible" />
    <!--发牌单张效果-->
    <ImageView
        android:id="@+id/iv_fapai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/xm_ttdn_fp"
        android:visibility="invisible" />
    <!--游戏提示-->
    <ImageView
        android:id="@+id/tv_game_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/home_yellow"
        android:textSize="@dimen/text_size_14"
        android:textStyle="bold"
        android:visibility="gone" />
</RelativeLayout>