<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:gravity="center_horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<FrameLayout
    android:layout_width="300dp"
    android:layout_height="350dp">

    <ImageView
        android:src="@mipmap/xm_win_bg"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_width="300dp"
        android:layout_height="350dp" />

    <TextView
        android:id="@+id/tv_total"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="138dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/base_color_press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rtyl_gift"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginBottom="70dp" />

    <TextView
        android:id="@+id/btn_daShang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_size_30"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/btn_search_music_finish_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="打赏"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_11"
        android:textStyle="bold" />
</FrameLayout>

</LinearLayout>