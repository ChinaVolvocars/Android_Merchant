<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/ll_tap"
        android:background="@drawable/selector_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v4.widget.Space
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/iv_tab_icon"
            android:scaleType="fitCenter"
            android:layout_width="@dimen/tab_image_size"
            android:layout_height="@dimen/tab_image_size"/>

        <TextView
            android:id="@+id/tv_tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:maxLines="1" />
    </LinearLayout>

    <View
        android:id="@+id/msg_location"
        android:layout_centerHorizontal="true"
        android:layout_width="1dp"
        android:layout_height="1dp"/>

    <com.common.widget.tablayout.MsgView
        android:id="@+id/rtv_msg_tip"
        xmlns:mv="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/msg_location"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="10sp"
        mv:mv_backgroundColor="@color/c_FE6F4E"
        mv:mv_isRadiusHalfHeight="true"
        mv:mv_strokeColor="#ffffff"
        mv:mv_strokeWidth="1dp"/>

</RelativeLayout>