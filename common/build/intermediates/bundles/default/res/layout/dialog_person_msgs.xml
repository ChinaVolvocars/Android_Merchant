<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/selector_shape_whites"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/usermsg_ima"
                android:layout_marginTop="20dp"
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:layout_height="80dp"
                android:src="@mipmap/main_ph" />

            <LinearLayout
                android:layout_marginTop="@dimen/view_size_10"
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="25dp">

                <TextView
                    android:id="@+id/usermsg_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:text="宋文腾"
                    android:textColor="#4c4c4c"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/usermsg_sex"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_size_5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/man"/>

                <TextView
                    android:id="@+id/usermsg_lv"
                    android:background="#B46FF5"
                    android:text="LV6"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size_16"
                    android:padding="@dimen/view_size_1"
                    android:layout_marginLeft="@dimen/view_size_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/view_size_8"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/usermsg_id"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:1564618"
                    android:textColor="#4c4c4c"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/usermsg_address"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/mian_dw_red"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="杭州市"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="#4c4c4c"
                    android:drawablePadding="5dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/usermsg_sign"
                android:layout_marginTop="8dp"
                style="@style/base_text_style"
                android:gravity="center"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="寄过来司法机关老大过来给对方金"
                android:textColor="#4c4c4c"/>

            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:src="@color/view_background_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/usermsg_age"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="年龄：10"
                    android:textColor="#4c4c4c"
                    android:textSize="18sp"/>
                <View
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="@color/view_background_color"/>

                <TextView
                    android:id="@+id/usermsg_fsnum"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="粉丝：18.0w"
                    android:textColor="#4c4c4c"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/usermsg_xz"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="星座：双子座"
                    android:textColor="#4c4c4c"
                    android:textSize="18sp"/>
                <View
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="@color/view_background_color"/>

                <TextView
                    android:id="@+id/usermsg_ml"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="魅力：1800w"
                    android:textColor="#4c4c4c"
                    android:textSize="18sp"/>
            </LinearLayout>

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:src="@color/view_background_color"/>

            <LinearLayout
                android:id="@+id/usermsg_ll"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/usermsg_sx"
                    android:layout_marginRight="20dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:background="@drawable/cricle_5_nomal"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="私信"/>

                <TextView
                    android:id="@+id/usermsg_gz"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14sp"
                    android:background="@drawable/cricle_5"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="关注"/>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/usermsg_dismiss"
            android:layout_gravity="top|right"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginRight="@dimen/text_size_15"
            android:layout_marginTop="@dimen/text_size_15"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/dialogback"/>
        <TextView
            android:id="@+id/work"
            android:layout_gravity="top|left"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/text_size_15"
            android:layout_width="40dp"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:text="管理"
            android:layout_height="40dp"
            android:gravity="center"
            />
    </FrameLayout>

</LinearLayout>