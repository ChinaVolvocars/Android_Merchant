<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_share_bg">

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                app:tabIndicatorColor="@color/home_yellow_bg"
                app:tabSelectedTextColor="@color/home_yellow_bg"
                app:tabTextAppearance="@style/MyTablayoutStyle2"
                app:tabTextColor="@color/text_color_black_3" />

            <TextView
                android:id="@+id/tv_do_ignore"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="忽略"
                android:textColor="@color/text_color_half_black_4"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="260dp" />

    </LinearLayout>
</RelativeLayout>