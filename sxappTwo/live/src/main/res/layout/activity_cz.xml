<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_login"
        android:orientation="vertical">

        <FrameLayout
            android:layout_marginTop="@dimen/view_size_20"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/text_size_15"
                android:clickable="true"
                android:src="@mipmap/icon_back_white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_15"
            android:layout_marginRight="@dimen/text_size_15"
            android:layout_marginTop="15dp"
            android:background="@drawable/cz_back"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_size_35"
                android:gravity="center"
                android:text="我的钻石"
                android:textColor="#888888"/>
            <TextView
                android:id="@+id/cz_my_zs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8821"
                android:textColor="@color/base_color"
                android:textSize="35sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="#ddd"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cz_ali"
                    style="@style/base_text_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="支付宝支付"
                    android:textColor="@color/base_color"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="1px"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:src="#888888"/>
                <TextView
                    android:id="@+id/cz_wx"
                    style="@style/base_text_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="微信支付"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="#ddd"/>
            <ListView
                android:layout_marginLeft="@dimen/view_size_5"
                android:layout_marginRight="@dimen/view_size_5"
                android:id="@+id/listviews"
                android:layout_width="match_parent"
                android:layout_height="250dp">

            </ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/view_size_30"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/text_size_20"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已阅读并同意《"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/czxy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="用户充值协议"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="》"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>