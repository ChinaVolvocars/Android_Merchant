<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_frame_toast"
    android:layout_width="210dp"
    android:layout_height="90dp">

    <TextView
        android:layout_width="210dp"
        android:layout_height="90dp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/iv_toast"
        android:layout_marginTop="@dimen/view_size_15"
        android:layout_marginBottom="@dimen/view_size_20"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_toast"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/view_size_15"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:shadowColor="#BB000000" />
</RelativeLayout>