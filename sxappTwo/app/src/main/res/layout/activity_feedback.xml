<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        android:scrollbars="none">
        <FrameLayout
            android:background="@mipmap/titles_bac"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:text="省鑫网-服务调查"
                android:gravity="center"
                android:textSize="18sp"/>
            <ImageView
                android:layout_marginTop="15dp"
                android:src="@mipmap/whait_back"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/jx_10_w"
            android:layout_height="40dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="投诉商家"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/black"/>
            <com.common.widget.editview.DeleteEditText
                android:id="@+id/names"
                android:paddingRight="10dp"
                android:gravity="center_vertical|right"
                style="@style/inputView_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="所属地区/店名"
                android:inputType="textPersonName"
                android:textSize="12sp"
                />
        </LinearLayout>
        <com.common.widget.editview.CountEditText
            android:id="@+id/ev_notice"
            android:gravity="top|left"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_frame_solid_grey"
            android:textSize="13sp"
            android:layout_margin="@dimen/view_size_15"
            android:hint="请输入您的意见..."
            android:padding="@dimen/view_size_12"
            android:textColorHint="@color/normal_text_color"
            android:textColor="@color/c_333333" />
        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_submit"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="提交"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:clickable="true"
            android:background="@drawable/jx_10_base"
            style="@style/BaseCustomButton"/>
        <LinearLayout
            android:layout_below="@id/ev_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_marginRight="@dimen/view_size_15"
                android:text="0/140"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_999999" />

        </LinearLayout>
        <ImageView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ggw"/>
    </LinearLayout>
</ScrollView>