<?xml version="1.0" encoding="utf-8"?>
<com.common.widget.itemview.MyRadioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
                                                  xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <LinearLayout
        android:id="@+id/mLlDelete"
        android:layout_width="80dp"
        android:weightSum="2"
        android:layout_height="120dp">
        <TextView
            android:background="@drawable/pj_nomal_red"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>
    <FrameLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <com.common.widget.imageview.SelectableRoundedImageView
            android:id="@+id/iv_picture"
            android:scaleType="centerCrop"
            android:background="@color/base_color"
            android:adjustViewBounds="true"
            app:sriv_right_top_corner_radius="@dimen/view_size_15"
            app:sriv_left_top_corner_radius="@dimen/view_size_15"
            app:sriv_right_bottom_corner_radius="@dimen/view_size_15"
            app:sriv_left_bottom_corner_radius="@dimen/view_size_15"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="110dp" />

        <LinearLayout
            android:id="@+id/ll_ll"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ima"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/bxyk"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="5dp"
                    android:text="中国工商银行"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="5dp"
                    android:text="储蓄卡"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="5dp"
                    android:text="146465164611654616554651"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</com.common.widget.itemview.MyRadioRelativeLayout>