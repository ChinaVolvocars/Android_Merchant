<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:fillViewport="true"
              android:background="@color/white"
              android:orientation="vertical"
              android:overScrollMode="never"
              android:scrollbars="none">
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@mipmap/title_bac"
        android:layout_height="95dp">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="95dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@mipmap/dw_whait"
                    android:gravity="center"
                    android:text="杭州市江干区"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"/>
                <ImageView
                    android:id="@+id/msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/msg"/>
                <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:id="@+id/ll_ll"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/jx_10_w"
                android:layout_height="30dp">
                <ImageView
                    android:id="@+id/search"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/search"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/key"
                    android:clickable="false"
                    style="@style/inputView_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="输入关键词搜索您想要的商品"
                    android:textColorHint="@color/normal_text_color"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="-10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/base_color"
        android:layout_height="25dp">
        <ImageView
            android:id="@+id/gg"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gg"/>
        <com.hzxmkuar.sxmaketnew.view.HorizontalScrollTextView
            android:id="@+id/pmd"
            android:layout_marginLeft="5dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="25dp">
        </com.hzxmkuar.sxmaketnew.view.HorizontalScrollTextView>
    </LinearLayout>
        <com.common.widget.guideview.BGABanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:banner_indicatorGravity="right"
            app:banner_pageChangeDuration="300"
            app:banner_pointAutoPlayAble="true"
            app:banner_pointContainerBackground="@color/transparent"
            app:banner_pointTopBottomMargin="5dp"
            app:banner_tipTextColor="@color/white"
            app:banner_tipTextSize="15dp"
            app:banner_transitionEffect="alpha"/>
    <!--头部四个-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/qd"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/qd"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/hb"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/lhb"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/hd"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/rw"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赢家签到"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑领红包"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家活动"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:background="@color/base_color"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="推荐芳邻商家"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/more1"
            android:layout_width="wrap_content"
            android:text="更多"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="8dp"
            android:background="@mipmap/home_bac"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="180dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="90dp">
                <ImageView
                    android:id="@+id/five"
                    android:src="@mipmap/jxsp"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="@dimen/view_size_0_5"
                    android:layout_height="match_parent"
                    android:src="#ddd"/>
                <ImageView
                    android:id="@+id/six"
                    android:src="@mipmap/jrsx"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_0_5"
                android:src="#ddd"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="90dp">
                <ImageView
                    android:id="@+id/seven"
                    android:src="@mipmap/jjby"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="@dimen/view_size_0_5"
                    android:layout_height="match_parent"
                    android:src="#ddd"/>
                <ImageView
                    android:id="@+id/eight"
                    android:src="@mipmap/ppt"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:background="@color/base_color"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="福利上线商城"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/more2"
            android:layout_width="wrap_content"
            android:text="更多"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>