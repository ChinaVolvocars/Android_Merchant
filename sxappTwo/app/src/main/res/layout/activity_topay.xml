<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fillViewport="true"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:background="@mipmap/titles_bac"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:src="@mipmap/whait_back"/>

        <TextView
            android:id="@+id/t_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="众鑫赢家-支付"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="折扣详情"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="鑫利豆抵扣"
                android:textColor="@color/normal_text_color"
                android:textSize="14sp"/>
            <TextView
                style="@style/inputView_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text="-6豆"
                android:inputType="phone"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="现金补差"
                android:textColor="@color/normal_text_color"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/name"
                style="@style/inputView_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text="￥258"
                android:textColor="@color/base_color"
                android:inputType="phone"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_0_5"
        android:background="#ddd"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="请选择支付方式"
            android:textColor="#333"
            android:textSize="15sp"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_0_5"
        android:background="#ddd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="支付宝"
            android:drawableLeft="@mipmap/alipay"
            android:drawablePadding="3dp"
            android:textColor="#333"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/ima_ali"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/gouxuan_sels"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_0_5"
        android:background="#ddd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="微信"
            android:drawableLeft="@mipmap/wxpay"
            android:drawablePadding="3dp"
            android:textColor="#333"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/ima_wx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/sel_noms"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_0_5"
        android:background="#ddd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="银联支付"
            android:drawableLeft="@mipmap/yinlian"
            android:drawablePadding="3dp"
            android:textColor="#333"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/ima_ye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/sel_noms"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/tijiao"
        style="@style/BaseCustomButton"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="70dp"
        android:background="@color/base_color"
        android:clickable="true"
        android:text="确定"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</LinearLayout>