<?xml version="1.0" encoding="utf-8"?>
<com.hyphenate.easeui.widget.BubbleLinearLayout
    android:id="@+id/popup_container"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:gravity="top"
    app:offset="35dp"
    app:triangleHeight="5dp"
    app:orientation="bottom"
    app:triangleWidth="8dp"
    app:bgColor="@color/selector_white_color"
    app:borderColor="@color/base_color_press"
    android:clipChildren="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="35dp"
                android:text="复制"
                android:paddingLeft="@dimen/view_size_8"
                android:paddingRight="@dimen/view_size_8"
                android:textColor="#4c4c4c"
                android:textSize="11sp" />

            <View
                android:id="@+id/v_line"
                android:layout_width="0.5dp"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/view_size_5"
                android:background="@color/base_color_press" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="35dp"
                android:paddingLeft="@dimen/view_size_8"
                android:paddingRight="@dimen/view_size_8"
                android:textColor="#4c4c4c"
                android:text="删除"
                android:textSize="11sp"
                android:drawablePadding="5dp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="5dp" />

    </LinearLayout>

</com.hyphenate.easeui.widget.BubbleLinearLayout>
