<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="220dp"
              android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/selector_shape_whites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="历史记录"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#fff"
            android:background="@color/base_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="100dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ima_one"
                    android:layout_width="60dp"
                    android:background="@drawable/bg_circle_shape_yes"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    android:src="@mipmap/main_ph"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/ima_two"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/center_tx"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="平局"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ima_three"
                    android:layout_width="60dp"
                    android:background="@drawable/bg_circle_shape_yes"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    android:src="@mipmap/main_ph"/>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:divider="@null"
            android:id="@+id/listview"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:dividerHeight="5dp"
            android:layout_width="match_parent"
            android:layout_height="190dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="#888"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="40dp"
        android:layout_width="35dp"
        android:layout_gravity="center"
        android:layout_height="35dp"
        android:src="@mipmap/icon_close_black" />
</LinearLayout>