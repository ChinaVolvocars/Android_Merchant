<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/view_size_5"
        android:paddingBottom="@dimen/view_size_5"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_set_mode_voice"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="@dimen/view_size_15"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_record_grey"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_set_mode_keyboard"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ease_chatting_setmode_keyboard_btn"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/btn_press_to_speak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/ease_chat_press_speak_btn"
                android:padding="5dp"
                android:gravity="center"
                android:text="@string/button_pushtotalk"
                android:textColor="#8e8e8e"
                android:textSize="13sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/edittext_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="bottom" >

            <EditText
                android:id="@+id/et_sendmessage"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/ease_bg_frame_shape_grey"
                android:maxLines="3"
                android:minHeight="30dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/text_size_13"
                android:imeOptions="actionSend"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_face"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/iv_face_normal"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="@dimen/view_size_3"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_smile_grey"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_face_checked"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="@dimen/view_size_3"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_smile_grey"
                android:visibility="invisible" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_more"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="15dp"
            android:layout_marginRight="@dimen/view_size_15"
            android:background="@drawable/icon_add_grey"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_shape_white"
            android:text="@string/button_send"
            android:textColor="#666666"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>