<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_chat_activity"
        android:layout_marginTop="@dimen/margin_chat_activity" >

        <ImageView
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:src="@mipmap/loadingview_empty"
            android:scaleType="fitXY" />

        <com.hyphenate.easeui.widget.BubbleLinearLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_userhead"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:layout_below="@+id/tv_userid"
            android:minHeight="@dimen/view_size_40"
            android:gravity="left|center_vertical"
            app:offset="4dp"
            app:borderColor="@color/base_color_press"
            app:triangleHeight="10dp"
            app:orientation="left"
            app:triangleWidth="8dp"
            app:bgColor="@color/selector_white_color" >

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="@dimen/view_size_5"
                android:src="@drawable/ease_chat_from_voice_play" />

        </com.hyphenate.easeui.widget.BubbleLinearLayout>

        <TextView
            android:id="@+id/tv_length"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/bubble"
            android:layout_alignTop="@id/bubble"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            tools:ignore="HardcodedText"
            android:gravity="center" />

        <ImageView
            android:id="@+id/iv_unread_voice"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_alignTop="@id/bubble"
            android:layout_toRightOf="@id/tv_length"
            android:background="@drawable/ease_voice_unread" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/iv_unread_voice"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/chat_nick_margin_left"
            android:textSize="@dimen/chat_nick_text_size"
            android:layout_toRightOf="@id/iv_userhead"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>