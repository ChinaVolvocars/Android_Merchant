<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:background="@color/color_fefcfc"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_befor_the_payment"
            android:layout_width="295dp"
            android:layout_height="30dp"
            android:layout_marginTop="14dp"
            android:background="@mipmap/before_the_payment_bg" />

        <LinearLayout
            android:id="@+id/tv_value_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@mipmap/payfor_other_befor_the_paymentbg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_payfor_other_befor_the_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="50.00"
                android:textColor="@color/color_3d3d3d"
                android:textSize="43sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待收账款"
                android:textColor="@color/color_3d3d3d"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="6dp"
        android:background="@color/color_fefcfc"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_have_to_account"
            android:layout_width="288dp"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:background="@mipmap/payfor_other_have_to_account_bg" />

        <com.common.widget.recyclerview.refresh.recycleview.XRecyclerView
            android:id="@+id/x_recyclerview_payforother"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.common.widget.recyclerview.refresh.recycleview.XRecyclerView>

    </LinearLayout>
</LinearLayout>