<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="150dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll_bind_conetnt"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/jx_20_w"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="语音设备产品ID"
            android:textColor="@color/color_1e1e1e"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edt_edit_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:gravity="center_horizontal"
            android:hint="请输入设备ID"
            android:inputType="number"
            android:maxLines="1" />


        <TextView
            android:id="@+id/tv_commit_device_id"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_rectangle_color_fed846_radius5"
            android:gravity="center_horizontal"
            android:padding="6dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_unbind_conetnt"
        android:layout_width="320dp"
        android:layout_height="144dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/jx_20_w"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="是否关闭语音播报功能？"
            android:textColor="@color/color_1e1e1e"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_confirm_unbind"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="33dp"
                android:background="@drawable/shape_rectangle_color_fed846_radius5"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:text="是"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_cancel_unbind"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:background="@drawable/shape_rectangle_color_444444_radius5"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:text="否"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>