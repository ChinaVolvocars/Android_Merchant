<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@mipmap/titles_bac">

                <TextView
                    style="@style/TitleBarTitleStyle"
                    android:text="众商联盟-我的店" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/tv_is_test"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="测试环境"
                        android:gravity="center"
                        android:layout_marginLeft="16dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/iv_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/set_wait" />
                </RelativeLayout>

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_home_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_149"
                android:background="@mipmap/main_bg"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_93"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_edite_info"
                    style="@style/HomeViewItemStyle">

                    <ImageView
                        style="@style/HomeViewItemIconStyle"
                        android:src="@mipmap/zlbj" />

                    <TextView
                        style="@style/HomeViewItemTvStyle"
                        android:text="资料编辑" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_active_list"
                    style="@style/HomeViewItemStyle">

                    <ImageView
                        style="@style/HomeViewItemIconStyle"
                        android:src="@mipmap/active_list_icon" />

                    <TextView
                        style="@style/HomeViewItemTvStyle"
                        android:text="活动列表" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_manager_finance"
                    style="@style/HomeViewItemStyle">

                    <ImageView
                        style="@style/HomeViewItemIconStyle"
                        android:src="@mipmap/cwgl" />

                    <TextView
                        style="@style/HomeViewItemTvStyle"
                        android:text="财务管理" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_manager_account"
                    style="@style/HomeViewItemStyle"
                    android:layout_width="0dp">

                    <ImageView
                        style="@style/HomeViewItemIconStyle"
                        android:src="@mipmap/account_icon" />

                    <TextView
                        style="@style/HomeViewItemTvStyle"
                        android:text="商家管理" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_want_show"
                    style="@style/HomeViewItemStyle"
                    android:layout_width="0dp">

                    <ImageView
                        style="@style/HomeViewItemIconStyle"
                        android:src="@mipmap/want_show_icon" />

                    <TextView
                        style="@style/HomeViewItemTvStyle"
                        android:text="我要展示" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_desc_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/view_size_8"
                android:gravity="center"
                android:text="商家收款码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_desc_title"
                android:layout_marginBottom="@dimen/view_size_12"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_qr_code"
                    android:layout_width="@dimen/view_size_224"
                    android:layout_height="@dimen/view_size_224"
                    android:layout_marginTop="@dimen/view_size_8"
                    android:background="@color/white"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_gathering_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ID000" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
