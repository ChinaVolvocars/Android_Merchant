<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@mipmap/titles_bac">

        <TextView
            style="@style/TitleBarTitleStyle"
            android:text="申请管理会员账号" />

        <ImageView
            android:id="@+id/iv_manager_vip_back"
            style="@style/TitleBarBackStyle" />
    </FrameLayout>

    <LinearLayout style="@style/BindBankCardContent">

        <TextView
            style="@style/MyStoreContentLeft"
            android:text="账号" />

        <TextView
            android:id="@+id/tv_vip_account"
            style="@style/MyStoreContentRight"
            android:drawableRight="@null"
            android:text="示例：100010000100" />
    </LinearLayout>

    <LinearLayout style="@style/BindBankCardContent">

        <TextView
            style="@style/MyStoreContentLeft"
            android:text="粉丝数" />

        <TextView
            android:id="@+id/tv_fans_count"
            style="@style/MyStoreContentRight"
            android:drawableRight="@null"
            android:text="示例：1417" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="邀请码"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_qr_img"
            android:layout_width="224dp"
            android:layout_height="224dp"
            android:src="@mipmap/ggw" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_id_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="示例：112233" />

</LinearLayout>
