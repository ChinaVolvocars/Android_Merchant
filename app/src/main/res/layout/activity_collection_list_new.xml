    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical">
    <!--代收代付申请记录-->
    <ImageView
        android:id="@+id/iv_adv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
