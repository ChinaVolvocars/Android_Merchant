<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/layout_toolbar_base"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/voice_broadcaste"
                android:textColor="@color/color_363636"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_have_not_bind"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/shape_rectangle_color_eb0000"
                android:gravity="center"
                android:text="未绑定"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="30dp"
                android:background="@color/color_b1b5b6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/voice_broadcaste_step02"
                android:textColor="@color/color_363636"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:src="@mipmap/bind_step01" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:src="@mipmap/bind_step02" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:src="@mipmap/bind_step03"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>