<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
             android:paddingTop="10dp"
                android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_ll"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_width="145dp"
            android:layout_marginLeft="15dp"
            android:layout_height="170dp">
            <com.common.widget.imageview.SelectableRoundedImageView
                android:id="@+id/iv_picture"
                android:background="#dddddd"
                android:layout_gravity="center"
                android:layout_width="145dp"
                android:layout_height="170dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/test"
                app:sriv_left_top_corner_radius="@dimen/view_size_5"
                app:sriv_right_bottom_corner_radius="@dimen/view_size_5"
                app:sriv_right_top_corner_radius="@dimen/view_size_5"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="1."/>
        </FrameLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:layout_width="145dp"
            android:paddingBottom="5dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="新时尚运动内衣"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>