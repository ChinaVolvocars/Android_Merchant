<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@mipmap/titles_bac">

        <TextView
            style="@style/TitleBarTitleStyle"
            android:text="活动中心" />

        <ImageView
            android:id="@+id/iv_active_back"
            style="@style/TitleBarBackStyle" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_active_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_size_15"
        android:padding="4dp"
        android:background="@color/color_f7f7f7"
        android:text="共0条"
        android:textColor="@color/color_b59b72"
        android:textSize="@dimen/text_size_12" />

    <com.common.widget.recyclerview.refresh.recycleview.XRecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rv_active_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/view_background_color" />
</LinearLayout>
