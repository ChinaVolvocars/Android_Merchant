<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginLeft="@dimen/view_size_16"
    android:layout_marginRight="@dimen/view_size_16"
    android:layout_marginTop="14dp"
    android:background="@drawable/jx_10_w"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_icon"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ggw" />

    <TextView
        android:id="@+id/tv_active_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/view_size_6"
        android:padding="@dimen/view_size_2"
        android:text="迎新礼"
        android:textColor="#727272"
        android:textColorHint="@color/white"
        android:textSize="@dimen/text_size_15" />


    <ImageView
        android:id="@+id/iv_time_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_size_8"
        android:layout_marginRight="@dimen/view_size_12"
        android:layout_toLeftOf="@+id/tv_active_end_time"
        android:background="@mipmap/time_start_icon" />

    <TextView
        android:id="@+id/tv_active_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_size_6"
        android:layout_marginRight="@dimen/view_size_12"
        android:layout_toLeftOf="@+id/iv_active_type"
        android:text="距结束 还有1天"
        android:textColor="@color/color_b59b72"
        android:textSize="@dimen/text_size_12" />

    <ImageView
        android:id="@+id/iv_active_type"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/view_size_8"
        android:layout_marginRight="@dimen/view_size_6"
        android:scaleType="fitXY"
        android:src="@mipmap/active_hot_icon" />

