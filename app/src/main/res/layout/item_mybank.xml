<?xml version="1.0" encoding="utf-8"?>
<com.common.widget.itemview.MyRadioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mLlDelete"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:weightSum="2">

        <TextView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:background="@drawable/pj_nomal_red"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <!--android:background="@color/base_color"-->
        <com.common.widget.imageview.SelectableRoundedImageView
            android:id="@+id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="@dimen/view_size_15"
            app:sriv_left_top_corner_radius="@dimen/view_size_15"
            app:sriv_right_bottom_corner_radius="@dimen/view_size_15"
            app:sriv_right_top_corner_radius="@dimen/view_size_15" />

        <TextView
            android:id="@+id/tv_card_type"
            android:layout_width="48dp"
            android:layout_height="18dp"
            android:layout_marginLeft="266dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_ractangle_shape"
            android:gravity="center"
            android:text="对公账户"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <LinearLayout
            android:id="@+id/ll_ll"
            android:layout_width="324dp"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bank_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="5dp"
                    android:text="中国工商银行"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="5dp"
                    android:text="储蓄卡"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="5dp"
                    android:text="146465164611654616554651"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</com.common.widget.itemview.MyRadioRelativeLayout>