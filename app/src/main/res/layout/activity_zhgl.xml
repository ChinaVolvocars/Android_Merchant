<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:background="@mipmap/titles_bac"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:text="省鑫网-账号管理"
                android:gravity="center"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/back"
                android:layout_marginTop="15dp"
                android:src="@mipmap/whait_back"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <LinearLayout
            android:visibility="gone"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="头像"
                android:textColor="#333"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"/>
            <ImageView
                android:id="@+id/face"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_pic"
                android:layout_marginRight="15dp"
                android:layout_width="@dimen/view_size_50"
                android:layout_height="@dimen/view_size_50" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_0_5"
            android:src="#ddd"/>
        <LinearLayout
            android:id="@+id/ll_name"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="个人信息"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/name"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/normal_text_color"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/alls_back"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_0_5"
            android:src="#ddd"/>
        <LinearLayout
            android:id="@+id/ll_sex"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="手机号绑定"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/sex"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/normal_text_color"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/alls_back"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_0_5"
            android:src="#ddd"/>
        <LinearLayout
            android:id="@+id/ll_age"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="收货管理"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/age"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/normal_text_color"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/alls_back"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_0_5"
            android:src="#ddd"/>
        <LinearLayout
            android:id="@+id/ll_phone"
            android:visibility="gone"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="密码设置"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/phone"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/normal_text_color"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/alls_back"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_submit"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:clickable="true"
            android:textSize="16sp"
            android:background="@drawable/jx_10_base"
            style="@style/BaseCustomButton"/>
        <ImageView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ggw"/>
    </LinearLayout>
</ScrollView>