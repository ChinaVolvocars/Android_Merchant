<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_content"
    android:layout_width="match_parent"
    android:layout_height="234dp"
    android:background="@color/color_F5F4F4"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/bg_half_circle_10_color_fcc80a"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="22dp"
            android:text="券码累计可提现:"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_current_coupon_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="￥0.00"
            android:textColor="@color/white"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_withdraw_content"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/bg_half_circle_bottom_white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@mipmap/tickets_check_withdraw_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="每周一可至【提现申请】处进行提现"
            android:textColor="@color/color_1e1e1e"
            android:textSize="11sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_F5F4F4"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="18dp"
            android:background="@color/color_ffb007" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="验券记录"
            android:textColor="@color/color_1e1e1e"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_chose_date"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="14dp"
            android:background="@mipmap/calendar_icon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_9f9f9f" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_chose_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2019-01-01"
            android:textColor="@color/color_949393"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_date_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:text="共0笔  合计￥0.00"
            android:textColor="@color/color_949393"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>