<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_content"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@color/color_F5F4F4"
    android:orientation="vertical"
    android:paddingTop="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/jx_10_w"
        android:orientation="horizontal"
        android:paddingLeft="18dp">

        <LinearLayout
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@mipmap/clock_icon" />

            <TextView
                android:id="@+id/tv_check_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="16:00"
                android:textColor="@color/color_949393"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ticket_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20元特价券"
                android:textColor="@color/color_1e1e1e"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_ticket_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="券码："
                android:textColor="@color/color_949393"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ticket_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0.00"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_fcc50a"
            android:textSize="17sp"
            android:layout_marginRight="14dp"/>
    </LinearLayout>

</LinearLayout>