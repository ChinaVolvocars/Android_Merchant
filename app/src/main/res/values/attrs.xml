<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleProgress">
        <!-- 进度条的背景色-->
        <attr name="bgColor" format="color" />
        <!-- 进度条的前景色 起始颜色-->
        <attr name="foreStartColor" format="color" />
        <!-- 进度条的前景色 结束颜色-->
        <attr name="foreEndColor" format="color" />
        <!-- 进度条的大小-->
        <attr name="progressWidth" format="dimension" />
        <!-- 最大进度-->
        <attr name="maxProgress" format="integer" />
        <!-- 现在的进度-->
        <attr name="currProgress" format="integer" />
        <!-- 进度条的起始位置-->
        <attr name="progressInitialPosition" format="integer" />
        <!-- 是否使用动画-->
        <attr name="useAnimation" format="boolean" />
        <!-- 使用渐变-->
        <attr name="useGradient" format="boolean" />
        <!-- 边角是否是圆的-->
        <attr name="isCircleCorner" format="boolean" />
        <!-- 是否是实心的-->
        <attr name="isSolid" format="boolean" />
    </declare-styleable>
    <!--完成进度条-->
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="TickCircleProgress">
        <!-- 刻度条的粗细-->
        <attr name="tickWidth" format="dimension" />
        <!-- 刻度的颜色-->
        <attr name="tickColor" format="color" />
        <!-- 刻度条的高度-->
        <attr name="tickMarkHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TextCircleProgress">
        <!-- 主标题颜色-->
        <attr name="headColor" format="color" />
        <!-- 副标题颜色-->
        <attr name="subHeadColor" format="color" />
        <!-- 主标题字体大小-->
        <attr name="headSize" format="dimension" />
        <!-- 副标题字体大小-->
        <attr name="subHeadSize" format="dimension" />
        <!-- 底部标题颜色-->
        <attr name="bottomHeadColor" format="color" />
        <!-- 底部标题大小-->
        <attr name="bottomHeadSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="img_ratioX" format="integer" />
        <attr name="img_ratioY" format="integer" />
    </declare-styleable>

    <declare-styleable name="TopTitleView">
        <attr name="show_status_bar" format="boolean" />
        <attr name="show_title_bar" format="boolean" />
        <attr name="show_bottom_line" format="boolean" />
        <attr name="show_left" format="boolean" />
        <attr name="show_right" format="boolean" />
        <attr name="show_right_img" format="boolean" />
        <attr name="show_right_text" format="boolean" />
        <attr name="top_title" format="reference|string" />
        <attr name="right_text" format="reference|string" />
        <attr name="bg_color" format="color|reference" />
        <attr name="status_bar_bg" format="reference" />
        <attr name="back_icon" format="reference" />
        <attr name="use_bar_bg" format="boolean" />
        <attr name="sub_text_color" format="color|reference" />
        <attr name="title_text_color" format="color|reference" />
    </declare-styleable>


    <attr name="shape" format="integer"></attr>
    <attr name="themeColor" format="color"></attr>
    <attr name="isOpen" format="boolean"></attr>


    <declare-styleable name="slideswitch">
        <attr name="shape"></attr>
        <attr name="themeColor"></attr>
        <attr name="isOpen"></attr>
    </declare-styleable>

    <declare-styleable name="SideBar">
        <attr name="SB_Letter_Space" format="integer" />
        <attr name="SB_Is_Letter_Upper" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ImageCoverFlowView">
        <attr name="visibleImage" format="integer" />
        <attr name="reflectionHeight" format="fraction" />
        <attr name="reflectionGap" format="dimension" />
        <attr name="topImageClickEnable" format="boolean" />
        <attr name="coverflowGravity" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="center_vertical" value="2" />
        </attr>
        <attr name="coverflowLayoutMode" format="enum">
            <enum name="match_parent" value="0"></enum>
            <enum name="wrap_content" value="1"></enum>
        </attr>
    </declare-styleable>

</resources>